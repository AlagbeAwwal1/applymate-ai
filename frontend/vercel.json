{
  "builds": [
    {
      "src": "frontend/package.json",       
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },              
    { "src": "/(.*)", "dest": "/index.html" } 
  ],
  "env": {
    "VITE_API_BASE": "https://applymate-backend.onrender.com/api"
  }
}
